{
    "name": "syntaxx/phpx-starter-kit",
    "description": "PHPX starter kit",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Bohuslav Simek",
            "email": "bohuslav@simek.si"
        }
    ],
    "require": {
        "php": ">=8.4",
        "syntaxx/wasm-php-runtime-vrzno": "8.3.0",
        "syntaxx/phpx-framework": "^0.1.0"
    },
    "require-dev": {
        "syntaxx/phpx-build-tools": "^0.2.0",
        "syntaxx/webassembly-packer": "^0.1.3",
        "syntaxx/phpx-compiler": "^0.1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "bump-after-update": true,
        "sort-packages": true,
        "allow-plugins": {
            "syntaxx/wasm-php-runtime-vrzno": true
        }
    },
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "phpx-build serve"
        ],
        "wasm:export": "phpx-build export",
        "wasm:pack": "phpx-build pack",
        "wasm": "phpx-build build",
        "wasm:dev": "phpx-build build --dev --create-html-maps",
        "wasm:watch": [
            "Composer\\Config::disableProcessTimeout",
            "phpx-build watch"
        ],
        "wasm:watch:dev": [
            "Composer\\Config::disableProcessTimeout",
            "phpx-build watch --dev"
        ]
    },
    "extra": {
        "php-wasm": {
            "target-dir": "build"
        }
    }
}
